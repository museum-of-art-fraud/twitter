doctype html
html
	head
		link(rel='stylesheet' href='../bower_components/bootstrap/dist/css/bootstrap.css')
		link(rel='stylesheet' href="signup.css")
	body
		.container
			.row
				.col-md-4.col-md-offset-4
					form.form-signin
						h2.form-signin-heading Please sign up
						input.form-control.full-name(placeholder='Full name')
						input.form-control.email(placeholder='Email')
						input.form-control.password(type='password', placeholder='Password')
						button.btn.btn-lg.btn-primary.btn-block.signup Sign up

		script(src='../bower_components/jquery/dist/jquery.js')
		script(src='signup.js')
