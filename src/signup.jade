doctype html
html
	head
		link(rel='stylesheet' href='../bower_components/bootstrap/dist/css/bootstrap.css')
		link(rel='stylesheet' href="signup.css")
	body
		.container
			.row
				.col-md-offset-4.col-md-4
					form.form-signin
						h2.form-signin-heading Please sign up
						label.sr-only(for='inputFullName') Fullname
						input.inputFullName.form-control(type='text', placeholder='FullName',required='',  autofocus='')
						br
						label.sr-only(for='inputEmail') Email address
						input.inputEmail.form-control(type='email', placeholder='Email address', required='')
						br
						label.sr-only(for='inputPassword') Password
						input.inputPassword.form-control(type='password', placeholder='Password', required='')
						br
						button.btn.btn-lg.btn-primary.btn-block.signup(type='submit') Sign up

		script(src='../bower_components/jquery/dist/jquery.js')
		script(src='../bower_components/bootstrap/dist/js/bootstrap.js')
		script(src='signup.js')


